{
  "compilerOptions": {
    "module": "ESNext",      
    "target": "ES6",          
    "moduleResolution": "node", 
    "outDir": "./dist",    
    "rootDir": "./src",    
    "esModuleInterop": true,  
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],     
  "exclude": ["node_modules"]  
}
